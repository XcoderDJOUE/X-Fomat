function reformat(numbers="", nbr_G = 3){let all = numbers;let res = (all.split('+')[1])? all.split('+')[1].split(' ') : all.split('+')[0];let retour = Array.isArray(res) ? res.join('') : res;let val2 = retour.length;let alod_gam = nbr_G;let val3 = val2 % alod_gam;let val4 = (val3 == 0)? alod_gam : alod_gam;let val5 = Math.ceil(val2 / val4);let val6="";let val7 = val2 + val5;let old = 1;let y=0;for(let i = 0; i < val5; i++){if(i == old){val6 +=" "; old = old+1;}let blouk="";for(let w=0; w< alod_gam; w++){blouk += (retour[y + w] === undefined)? '' : (retour[y + w]);}val6 += blouk;y=y+alod_gam;} return val6;}
